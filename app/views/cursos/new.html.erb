<% content_for :title, "Novo Curso - CAMAAR" %>
<div class="container-fluid">
  <div class="container min-vh-100 d-flex align-items-start justify-content-center pt-5">
    <div class="col-lg-6 col-md-8">
      <!-- Header -->
      <div class="text-center mb-5">
        <h1 class="display-6 fw-bold text-dark mb-3">Novo Curso</h1>
        <p class="text-muted fs-6">
          Cadastre um novo curso no sistema
        </p>
      </div>
      <!-- Form Card -->
      <div class="card border-0 shadow-sm">
        <div class="card-body p-4">
          <%= render "form", curso: @curso %>
        </div>
      </div>
      <!-- Navigation Actions -->
      <div class="d-flex justify-content-center mt-4">
        <%= link_to cursos_path, class: "btn btn-outline-secondary d-flex align-items-center" do %>
          <svg width="16" height="16" fill="currentColor" class="me-2" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
          </svg>
          Voltar para Cursos
        <% end %>
      </div>
    </div>
  </div>
</div>
