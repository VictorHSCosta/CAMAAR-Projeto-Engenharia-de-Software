<% content_for :title, "Login - CAMAAR" %>

<div class="login-container">
  <div class="login-card fade-in-up">
    <!-- Seção do Formulário -->
    <div class="login-form-section">
      <h1 class="login-title">LOGIN</h1>
      
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), local: true, class: "needs-validation", novalidate: true) do |f| %>
        <div class="form-group">
          <%= f.label :email, "Senha", class: "form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "admin@aluno.unb.br", required: true %>
          <div class="invalid-feedback">Por favor, informe seu e-mail.</div>
        </div>

        <div class="form-group">
          <%= f.label :password, "Confirme a senha", class: "form-label" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password", required: true %>
          <div class="invalid-feedback">Por favor, informe sua senha.</div>
        </div>

        <div class="form-group">
          <%= f.submit "Alterar senha", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
    
    <!-- Seção de Boas-vindas -->
    <div class="login-welcome-section">
      <div>
        <h2 class="login-welcome-text">Bem vindo<br>ao<br>Camaar</h2>
      </div>
    </div>
  </div>
</div>

<script>
  // Bootstrap form validation
  (function() {
    'use strict';
    window.addEventListener('load', function() {
      var forms = document.getElementsByClassName('needs-validation');
      var validation = Array.prototype.filter.call(forms, function(form) {
        form.addEventListener('submit', function(event) {
          if (form.checkValidity() === false) {
            event.preventDefault();
            event.stopPropagation();
          }
          form.classList.add('was-validated');
        }, false);
      });
    }, false);
  })();
</script>
