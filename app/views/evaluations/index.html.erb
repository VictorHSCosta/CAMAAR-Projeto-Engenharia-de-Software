<% content_for :title, "Avaliações - CAMAAR" %>

<div class="container-fluid px-4 py-4">
  <!-- Header consistente -->
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
          <h2 class="mb-1">
            <i class="fas fa-poll me-2 text-primary"></i>
            Avaliações
          </h2>
          <p class="text-muted mb-0">Selecione uma disciplina para avaliar</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Grid de Avaliações -->
  <div class="row">
    <div class="col-12">
      <div class="evaluations-grid">
        <% @subjects.each do |subject| %>
          <div class="evaluation-card fade-in-up">
            <h3 class="evaluation-title"><%= subject[:name] %></h3>
            <p class="evaluation-semester">semestre <%= subject[:semester] %></p>
            <p class="evaluation-professor">Professor</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>