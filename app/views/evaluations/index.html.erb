<%# app/views/evaluations/index.html.erb %>
<style>
  .subjects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 20px;
  }
  .subject-card {
    background-color: white;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 2px 5px rgba(0,0,0,0.05);
  }
  .subject-card .name {
    font-size: 18px;
    font-weight: bold;
    color: #333;
    margin: 0 0 5px 0;
  }
  .subject-card .semester {
    font-size: 12px;
    color: #888;
    margin: 0 0 15px 0;
    text-transform: uppercase;
  }
  .subject-card .professor {
    font-size: 16px;
    color: #555;
    margin: 0;
  }
</style>
<div class="subjects-grid">
  <% @subjects.each do |subject| %>
    <div class="subject-card">
      <p class="name"><%= subject[:name] %></p>
      <p class="semester">semestre <%= subject[:semester] %></p>
      <p class="professor"><%= subject[:professor] %></p>
    </div>
  <% end %>
</div>